<h1><%= @question.inquiry %></h1>
<h3><%= @question.user %></h3>

<% if @question.answers.any? %>

<% @question.answers.each do  |answer| %>
  <h2><%= answer.response %></h2>
  <p><%= answer.user %></p>
      <%= link_to "Edit", edit_question_answer_path(@question, answer) %> |
      <%= link_to "Delete", question_answer_path(@question, answer),
                                 :data => {:confirm => "Are you sure?",
                                                :method => "delete"} %>
<%end%>

<%else%>
  <p>There are no answers yet!</p>
<%end%>


<p><%= link_to "Add an answer", new_question_answer_path(@question) %></p>

<p><%= link_to "Edit question", edit_question_path(@question) %></p>

<p><%= link_to "Delete", question_path(@question), :data => {:confirm => "You sure?",
                                                         :method => "delete"} %></p>
<hr>
<%= link_to "Back to Homepage", root_path %>
